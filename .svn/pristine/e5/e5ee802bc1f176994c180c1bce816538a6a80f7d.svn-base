	var active = 0;
	
    
    jQuery(document).ready(function(){
		var n = jQuery('#slider .inner-sliders div').length; 
        jQuery('#slider .inner-sliders div').hide();
        showElement(1);
        jQuery("#next-btn").click(function(){
			console.log('guiugiug');
            if (active < n) showElement(active + 1);
        });
        jQuery("#previous-btn").click(function(){
			console.log('guiugiugddddddddddddddd');
            if (active > 1) showElement(active - 1);
        });
    });
    function showElement(id) {
        jQuery('#slider .inner-sliders div').hide();
       jQuery('#' + id).show(500);
        active = id;
    }